generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Client {
  id           String    @id @default(cuid())
  name         String
  phone        String?
  email        String?
  addressLine1 String?
  addressLine2 String?
  city         String?
  state        String?
  postalCode   String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  bookings     Booking[]

  @@index([name])
  @@index([email])
  @@index([phone])
}

model Booking {
  id                String            @id @default(cuid())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  clientId          String
  sitterId          String?
  clientLinkToken   String            @unique @default(cuid())
  notes             String?
  startTime         DateTime
  endTime           DateTime
  status            BookingStatus     @default(REQUESTED)
  clientTotalCents  Int
  platformFeeCents  Int
  sitterPayoutCents Int
  priceConfirmedAt  DateTime?
  canceledAt        DateTime?
  completedAt       DateTime?
  confirmedAt       DateTime?
  serviceSummary    String?
  client            Client            @relation(fields: [clientId], references: [id])
  sitter            User?             @relation("BookingSitter", fields: [sitterId], references: [id])
  history           BookingHistory[]
  lineItems         BookingLineItem[]

  @@index([startTime])
  @@index([status, startTime])
  @@index([clientId, startTime])
  @@index([sitterId, startTime])
}

model BookingLineItem {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  bookingId       String
  label           String
  quantity        Int      @default(1)
  unitPriceCents  Int
  totalPriceCents Int
  booking         Booking  @relation(fields: [bookingId], references: [id])
}

model BookingHistory {
  id              String         @id @default(cuid())
  createdAt       DateTime       @default(now())
  bookingId       String
  changedByUserId String?
  fromStatus      BookingStatus?
  toStatus        BookingStatus?
  fromSitterId    String?
  toSitterId      String?
  note            String?
  booking         Booking        @relation(fields: [bookingId], references: [id])
  changedBy       User?          @relation("HistoryChangedBy", fields: [changedByUserId], references: [id])
  fromSitter      User?          @relation("HistoryFromSitter", fields: [fromSitterId], references: [id])
  toSitter        User?          @relation("HistoryToSitter", fields: [toSitterId], references: [id])

  @@index([bookingId, createdAt])
}

model User {
  id                 String           @id @default(cuid())
  email              String           @unique
  name               String?
  role               Role
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  emailVerified      DateTime?
  hashedPassword     String?
  mustChangePassword Boolean          @default(false)
  accounts           Account[]
  sitterBookings     Booking[]        @relation("BookingSitter")
  historyEntries     BookingHistory[] @relation("HistoryChangedBy")
  historyFromSitter  BookingHistory[] @relation("HistoryFromSitter")
  historyToSitter    BookingHistory[] @relation("HistoryToSitter")
  sessions           Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  OPERATOR
  SITTER
}

enum BookingStatus {
  REQUESTED
  CONFIRMED
  COMPLETED
  CANCELED
}
